{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TonleDB SQL",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tonledb-sql",
          "match": "\\b(?i)(SELECT|FROM|WHERE|GROUP BY|ORDER BY|LIMIT|OFFSET|INSERT|UPDATE|DELETE|CREATE|DROP|ALTER|TABLE|INDEX|VIEW|DATABASE|PRIMARY KEY|FOREIGN KEY|REFERENCES|CONSTRAINT|UNIQUE|NOT NULL|DEFAULT|AUTO_INCREMENT|IF|ELSE|WHILE|BEGIN|END|FUNCTION|PROCEDURE|RETURN|AS|AND|OR|IN|LIKE|BETWEEN|IS|NULL|TRUE|FALSE)\\b"
        },
        {
          "name": "storage.type.tonledb-sql",
          "match": "\\b(?i)(INT|INTEGER|BIGINT|FLOAT|DOUBLE|DECIMAL|NUMERIC|CHAR|VARCHAR|TEXT|DATE|TIME|TIMESTAMP|BOOLEAN|BLOB)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.tonledb-sql",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tonledb-sql",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.tonledb-sql",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tonledb-sql",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.tonledb-sql",
          "match": "--.*$"
        },
        {
          "name": "comment.block.tonledb-sql",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.tonledb-sql",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tonledb-sql",
          "match": "(=|!=|<>|<|>|<=|>=|\\+|-|\\*|/|%|\\|\\||&&)"
        }
      ]
    }
  },
  "scopeName": "source.tonledb-sql"
}